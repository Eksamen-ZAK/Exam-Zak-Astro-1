---
import RepititionButton from "./RepititionButton.astro";
import Button from "./Button.astro";

interface Props {
  title: string;
  description?: string;
  note?: string;
  imageNumber: string;
  variant?: string;
  cardId?: string;
}

const { title, description, note, imageNumber, variant, cardId } = Astro.props;
---

<article class={variant}>
  <img src=`${imageNumber}` alt=`${title} image` />
  <div class="text-container">
    <h3>{title}</h3>
    <h3 class="note">{note && `(${note})`}</h3>
    <p>{description}</p>
    <div>
      <RepititionButton
        cardId={cardId}
        exercise={imageNumber}
        variant=`${variant==="remove" ? "small-card": "normal-card"}`
      />
      <Button
        type="button"
        text=`${variant==="remove" ?"Fjern":"TilfÃ¸j"}`
        variant=`${variant==="remove" ?"red x-small":"green"}`
        icon=`${variant==="remove" ?"trashcan":"plus"}`
      />
    </div>
  </div>
</article>

<style>
  article {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 421px;
    height: 178px;
    padding: 11px 12px;
    border-radius: 10px;
    background-color: var(--main-bg-color);
  }

  img {
    width: 153px;
    height: 153px;
    object-fit: contain;
  }
  .text-container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 15px 0;
    > div {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 200px;
    }
  }
  h3 {
    margin-top: 8px;
    margin-bottom: 0;
    font-size: 24px;
  }
  .note {
    margin-bottom: 0;
    font-size: 14px;
  }

  p {
    font-weight: var(--fw-t);
    font-size: 18px;
  }
  h3,
  p {
    font-family: var(--main-font);
  }

  .remove {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 250px;
    height: 93px;
    padding: 6px;

    > img {
      width: 80px;
      height: 80px;
    }
    > div {
      display: flex;
      align-items: stretch;
      flex-direction: column;
      justify-content: center;
      gap: 0;
      padding: 2px 3px;
      > h3 {
        font-size: 16px;
        margin-bottom: 0;
      }
      > h2 {
        margin-top: 8px;
        margin-bottom: 0;
        font-family: var(--main-font);
        font-size: 10px;
      }
      > p {
        font-size: 12px;
        font-weight: var(--fw-t);
        margin: 2px 0;
      }
      > div {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 150px;
      }
    }
  }
</style>
