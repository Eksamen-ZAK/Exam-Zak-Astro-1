---
interface Props {
  label: string;
  id: string;
  type: any;
  pattern?: string;
  title?: string;
  required: boolean;
}

const { label, id, type, pattern, title, required = false } = Astro.props;
---

<label for={id}>{label}</label>
<input id={id} name={id} type={type} required />

<style>
  input:focus {
    outline: none;
  }
  input {
    height: 40px;
    background: var(--alternative-bg-color);
    margin-bottom: 29px;
    border-radius: 10px;
    border: 0;
    font-size: var(--fs-s);
    padding-left: 12px;
  }
</style>
