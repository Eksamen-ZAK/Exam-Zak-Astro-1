---
import MenuItem from "./MenuItem.astro";
---

<div class="hide menu-overlay">
  <button class="close-menu"
    ><img src="assets/close-icon.svg" alt="kryds ikon" />
  </button>

  <div class="menu-content">
    <MenuItem text="Hjem" image="home-icon" altText="Hjem ikon" link="#" />
    <MenuItem
      text="Lav dit program"
      image="build-icon"
      altText="Værktøj ikon"
      link="/lav-dit-program"
    /><MenuItem
      text="Gemte programmer"
      image="bookmark-icon"
      altText="Bogmærke ikon"
      link="/gemte-programmer"
    /><MenuItem
      text="Statistik"
      image="stats-icon"
      altText="Statistik ikon"
      link="/statistik"
    />
    <MenuItem
      text="Om os"
      image="about-us-icon"
      altText="Gruppe personer ikon"
      link="#"
    />
    <MenuItem
      text="Indstillinger"
      image="settings-icon"
      altText="Tandhjul ikon"
      link="/indstillinger"
    />
  </div>

  <style>
    button {
      position: absolute;
      right: 45px;
      top: 45px;
      width: 42px;
      height: 35px;
      background-color: transparent;
      border: none;
      cursor: pointer;
    }
    .menu-overlay {
      height: 100vh;
      width: 100vw;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      overflow-x: hidden;
      background-color: var(--primary-color);
      transition: all 2s linear;
    }
    .hide {
      opacity: 0;
      display: none;
    }
    .menu-content {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      width: 995px;
      margin: 158px auto;
    }
  </style>
</div>
