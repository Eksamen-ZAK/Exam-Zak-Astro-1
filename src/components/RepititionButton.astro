---
interface Props {
  variant: string;
  exercise: string;
  cardId: string;
}
const { variant, exercise, cardId } = Astro.props;
---

<div class={variant} data-card-id={cardId}>
  <button id={`minus-${cardId}`}
    ><img src="assets/minus-black.svg" alt="minus icon" /></button
  >
  <div><p id={`number-${cardId}`}></p></div>
  <button id={`plus-${cardId}`}
    ><img src="assets/plus-black.svg" alt="plus icon" />
  </button>
</div>

<script>
  const buttons = document.querySelectorAll(".normal-card");
  window.addEventListener("load", loadRepititionButtons);

  function loadRepititionButtons() {
    buttons.forEach((button) => {
      let repititions = 5;
      function addRepitition() {
        repititions = repititions + 5;
        document.getElementById(`number-${cardId}`).textContent =
          repititions.toString();
      }
      function retractRepitition() {
        if (repititions > 4) {
          repititions = repititions - 5;
          document.getElementById(`number-${cardId}`).textContent =
            repititions.toString();
        }
      }
      console.log(repititions);
      const cardId = button.getAttribute("data-card-id");
      document.getElementById(`number-${cardId}`).textContent =
        repititions.toString();

      document
        .getElementById(`minus-${cardId}`)
        .addEventListener("click", () => {
          retractRepitition();
        });

      document
        .getElementById(`plus-${cardId}`)
        .addEventListener("click", () => {
          addRepitition();
        });
    });
  }
</script>

<style>
  div {
    display: flex;
    align-items: center;
    gap: 2px;
    > div {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 37px;
      height: 37px;
      background-color: #eaeaea;
      border-radius: 8px;
    }
  }
  p {
    font-family: var(--secondary-font);
    font-size: 18px;
  }
  button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 14px;
    height: 25px;
    border: 0;
    border-radius: 4px;
    background-color: #eaeaea;
    cursor: pointer;
  }
  img {
    padding: 9px 4px;
  }
  .small-card {
    > div {
      width: 22px;
      height: 22px;
      border-radius: 4px;
      > p {
        font-size: 14px;
      }
    }
    > button {
      height: 16px;
      border-radius: 2px;
      cursor: pointer;
    }
  }
</style>
