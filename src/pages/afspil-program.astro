---
import Header from "../components/Header.astro";
import Menu from "../components/Menu.astro";

interface Props {
  title: string;
  metaDescription?: string;
  backgroundColor?: string;
}

const { title, metaDescription, backgroundColor } = Astro.props;
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manjari:wght@100;400;700&family=Marmelad&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={backgroundColor}>
    <button class="top-right close-v">
      <div id=" close-vid">
        <img src="../assets/fat-close-btn-icon.svg" alt="Næste video" />
      </div>
      <p class="close-p">Afbryd</p>
    </button>

    <div class="top-left con-1">
      <h2>Repition</h2>
      <p>4/5</p>
    </div>

    <div class="top-left con-2">
      <h2>Øvelse</h2>
      <p>Rynk brynene</p>
    </div>

    <video id="background-video">
      <source src="../assets/videos/v003.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>

    <div class="control-buttons">
      <button id="backward-button"
        ><img src="../assets/backward-icon.svg" alt="Forrige video" /></button
      >
      <button id="play-button"
        ><img src="../assets/play-btn-icon.svg" alt="Afspil" /></button
      >
      <button id="pause-button"
        ><img src="../assets/pause-btn-icon.svg" alt="Pause" /></button
      >
      <button id="forward-button"
        ><img src="../assets/forward-icon.svg" alt="Næste video" /></button
      >
    </div>

    <div class="container">
      <video id="video" autoplay></video>
    </div>
    <script src="../js/videocam.js"></script>
  </body>

  <style is:global>
    body,
    html {
      height: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      --main-font: "Manjari", sans-serif;
      --secondary-font: "Marmelad", sans-serif;
      --fw-b: 700;
      --fw-r: 400;
      --fw-t: 100;
      --fs-xs: 10px;
      --fs-s: 14px;
      --fs-small-card: 16px;
      --fs-m: 18px;
      --fs-ml: 24px;
      --fs-l: 30px;
      --fs-xl: 32px;
      --primary-color: #901a36;
      --secondary-color: #749e2e;
      --main-bg-color: #f9f7f4;
      --alternative-bg-color: #eaeaea;
      --font-color: #141414;
    }

    h2 {
      color: var(--primary-color);
      font-family: var(--main-font);
      font-size: 1.875rem;
      font-style: normal;
      font-weight: var(--fw-b);
      margin: 0;
      line-height: 1.2;
    }

    p {
      color: var(--sort, #141414);
      font-family: var(--main-font);
      font-size: 3.125rem;
      font-style: normal;
      font-weight: 100;
      margin: 0;
      line-height: 1.2;
    }

    .close-p {
      color: #fff;
      text-align: center;
      font-family: var(--main-font);
      padding-top: 0.25rem;
      font-size: 1.19769rem;
      font-style: normal;
      font-weight: var(--fw-b);
      line-height: normal;
    }

    #background-video {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }

    .container {
      position: fixed;
      bottom: 10px;
      right: 10px;
      width: 25%;
      max-width: 300px;
      border: 2px solid white;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    video {
      width: 100%;
      height: auto;
      transform: scaleX(-1);
    }

    button {
      border: none;
      background: none;
      opacity: 50%;
    }

    .control-buttons {
      position: fixed;
      left: 0;
      right: 0;
      bottom: 20px;
      text-align: center;
    }

    #play-button,
    #pause-button {
      width: 6.13806rem;
      height: 6.4375rem;
      background-color: #901a36;
      border-radius: 6px;
    }

    #pause-button {
      display: none;
    }

    .close-v {
      margin: 0;
      display: flex;
      height: 2.8125rem;
      padding: 0.625rem 1.25rem;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 10px;
      border-radius: 0.09375rem;
      background: rgba(144, 26, 54, 0.5);
    }

    .top-right {
      position: absolute;
      top: 3%;
      right: 0;
      height: 2.8125rem;
      padding: 0.625rem 1.25rem;
      text-align: right;
      margin: 0;
    }

    .top-left {
      position: absolute;
      top: 3%;
      left: 0;
    }

    .con-1 h2,
    .con-1 p,
    .con-2 h2,
    .con-2 p {
      margin: 0;
      line-height: 1.2;
    }
    .con-1 {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      top: 21%;
      width: 12.3125rem;
      height: 5.6875rem;
      padding: 0.625rem 1.875rem;
      border-radius: 0rem 0.375rem 0.375rem 0rem;
      opacity: 0.8;
      background: rgba(249, 247, 244, 0.5);
      gap: 0.4375rem;
    }

    .con-2 {
      display: flex;
      /* width: 22.8125rem; */
      padding: 0.625rem 1.875rem;
      flex-direction: column;
      align-items: flex-start;
      border-radius: 0rem 0.375rem 0.375rem 0rem;
      opacity: 0.8;
      background: rgba(249, 247, 244, 0.5);
      gap: 0.4375rem;
    }
  </style>
</html>
