    border-bottom: 1px solid var(--primary-color);
  }
  div:has(h2) {
    margin-left: 341px;
  }
  .buttons {
    display: flex;
    gap: 9px;
    width: 250px;
    padding-top: 12px;
    margin: 0 auto;
  }
  .program-list {
    text-align: left;
    height: 77vh;
    display: flex;
    gap: 8px;
    flex-direction: column;
    align-items: center;
    overflow: scroll;
  }
</style>
